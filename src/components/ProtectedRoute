import React from 'react';
import { Navigate } from 'react-router-dom';

const ProtectedRoute = ({ isAuthenticated, allowedRoles, userRole, children }) => {
  if (!isAuthenticated) {
    // Si el usuario no est치 autenticado, redirigir al inicio de sesi칩n
    return <Navigate to="/login" replace />;
  }

  if (!allowedRoles.includes(userRole)) {
    // Si el usuario no tiene el rol permitido, redirigir a una p치gina de no autorizado
    return <Navigate to="/not-authorized" replace />;
  }

  // Si el usuario est치 autenticado y tiene el rol adecuado, renderizar el componente hijo
  return children;
};

export default ProtectedRoute;
